{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "react": [
        "node_modules/@types/react"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "eslintrc.js"
  ]
}
